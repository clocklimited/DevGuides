.page-content
  background-color $colorBodyBg
  position relative
  z-index 1
  min-height 400px

  &:before
    content ""
    position absolute
    bottom 100%
    left 0
    right 0
    height 20px
    background-image linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.1))

  &:after
    content ""
    position absolute
    top 100%
    left 0
    right 0
    height 20px
    background-image linear-gradient(to top, rgba(0,0,0,0), rgba(0,0,0,0.1))

  h2, h3, h4, h5, h6
    margin-top 2em

  ul, ol
    li
      list-style-position outside
      margin-left 1.5em
  ul
    li
      list-style-type disc
  ol
    li
      list-style-type decimal

  img
    display block
    margin 0 auto

@media $b700

  .page-content
    margin-top 260px
    margin-bottom 5em





.page-content
  h1:first-child
    font-size 2em

@media $b700
  .page-content
    h1:first-child
      position fixed
      top 0
      left 0
      z-index -1
      padding-top 40px
      height 260px
      line-height @height - @padding-top
      width 100%
      font-size 3em
      margin-bottom 0
      text-align center
      color #fff
