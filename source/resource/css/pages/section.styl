sectionStyling($sectionColor)
  ::selection
    color #fff
    background $sectionColor
    text-shadow none

  body&
    background-color $sectionColor

  .page-content a
    color $sectionColor

  pre
    border-color $sectionColor

  .main-footer
    color #fff


sectionFooterStyle($startString = false, $endString = false)
  .main-footer
    font-family Consolas, Monaco, 'Andale Mono', monospace
    small
      if $startString and $startString != ''
        &:before
          content $startString
          opacity 0.7
      if $endString and $endString != ''
        &:after
          content $endString
          opacity 0.7



//
// HTML
//

.section-html
  sectionStyling($sectionHTML)
  sectionFooterStyle('<!-- ', ' -->')


//
// CSS
//

.section-css
  sectionStyling($sectionCSS)
  sectionFooterStyle('/* ', ' */')


//
// JavaScript
//

.section-javascript
  sectionStyling($sectionJavascript)
  sectionFooterStyle('// ')


//
// Documents
//

.section-documents
  sectionStyling($sectionDocuments)
