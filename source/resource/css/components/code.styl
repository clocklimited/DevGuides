// $color--yellow ?= #e8d135
// $color--green  ?= #57a65e
// $color--purple ?= #9c5386
// $color--pink   ?= #eb4b5c


code
  padding .3em .1em .1em
  border 1px solid #e5e5e5
  margin -1px

  font-family Consolas, Monaco, 'Andale Mono', monospace
  white-space pre
  word-spacing normal
  word-break normal
  hyphens none
  tab-size 4

  background-color #f9f9f9
  background-color rgba(0,0,0,0.005)

pre
  border-left 0.25em solid $colorPrimary

  code
    display block
    overflow scroll

    // max-height 29em
    margin-left 0
    margin-right 0
    padding 1em

    border-left-width 0



/*

github.com style (c) Vasily Polovnyov <vast@whiteants.net>

